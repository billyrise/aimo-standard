{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://standard.aimoaas.com/schemas/aimo-validation-report.schema.json",
  "title": "AIMO Validation Report",
  "description": "Schema for validator audit report output (evidence readiness and integrity checks). Not assurance or compliance.",
  "type": "object",
  "required": [
    "report_version",
    "generated_at",
    "validator",
    "aimo_standard",
    "bundle",
    "summary",
    "results"
  ],
  "additionalProperties": false,
  "properties": {
    "report_version": {
      "type": "string",
      "description": "Report format version.",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "generated_at": {
      "type": "string",
      "description": "ISO 8601 UTC timestamp when the report was generated.",
      "format": "date-time"
    },
    "validator": {
      "type": "object",
      "required": ["name", "version"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "aimo_standard": {
      "type": "object",
      "required": ["version"],
      "additionalProperties": false,
      "properties": {
        "version": {
          "type": "string",
          "description": "AIMO Standard version (from root payload or unknown)."
        }
      }
    },
    "bundle": {
      "type": "object",
      "required": ["path"],
      "additionalProperties": false,
      "properties": {
        "path": { "type": ["string", "null"] },
        "bundle_id": { "type": ["string", "null"] },
        "bundle_version": { "type": ["string", "null"] },
        "scope_ref": { "type": ["string", "null"] }
      }
    },
    "summary": {
      "type": "object",
      "required": ["passed", "errors", "warnings"],
      "additionalProperties": false,
      "properties": {
        "passed": { "type": "boolean" },
        "errors": { "type": "integer", "minimum": 0 },
        "warnings": { "type": "integer", "minimum": 0 }
      }
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "check_id", "message"],
        "additionalProperties": false,
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"]
          },
          "check_id": { "type": "string" },
          "message": { "type": "string" },
          "path": { "type": ["string", "null"] },
          "details": { "type": "object" }
        }
      }
    }
  }
}
