{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://standard.aimoaas.com/schemas/shadow-ai-discovery.schema.json",
  "title": "Shadow AI Discovery Log Schema",
  "description": "Vendor-neutral schema for Shadow AI discovery logs. Supports evidence collection for unapproved AI usage detection, inventory, and remediation.",
  "type": "object",
  "required": [
    "event_time",
    "actor_id",
    "actor_type",
    "source_system",
    "ai_service",
    "action",
    "data_classification",
    "decision",
    "evidence_ref",
    "record_id"
  ],
  "properties": {
    "event_time": {
      "type": "string",
      "format": "date-time",
      "minLength": 1,
      "description": "ISO8601 timestamp of the event"
    },
    "actor_id": {
      "type": "string",
      "minLength": 1,
      "description": "Identifier of the user or service performing the action"
    },
    "actor_type": {
      "type": "string",
      "enum": ["user", "service"],
      "description": "Type of actor (user or service)"
    },
    "source_system": {
      "type": "string",
      "minLength": 1,
      "description": "System that detected/logged the event (e.g., proxy, casb, idp, edr, saas_audit)"
    },
    "ai_service": {
      "type": "string",
      "minLength": 1,
      "description": "AI product or domain accessed"
    },
    "action": {
      "type": "string",
      "minLength": 1,
      "description": "Action performed (e.g., chat, upload, download, tool_execute, api_call)"
    },
    "data_classification": {
      "type": "string",
      "minLength": 1,
      "description": "Data classification level (e.g., public, internal, confidential, restricted)"
    },
    "decision": {
      "type": "string",
      "enum": ["allow", "block", "needs_review", "unknown"],
      "description": "Policy decision applied to the event"
    },
    "evidence_ref": {
      "type": "string",
      "minLength": 1,
      "description": "URI or hash reference to related evidence"
    },
    "record_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for this log record"
    },
    "session_id": {
      "type": "string",
      "description": "Session identifier"
    },
    "device_id": {
      "type": "string",
      "description": "Device identifier"
    },
    "ip": {
      "type": "string",
      "description": "IP address"
    },
    "user_agent": {
      "type": "string",
      "description": "User agent string"
    },
    "department": {
      "type": "string",
      "description": "Organizational department"
    },
    "project_id": {
      "type": "string",
      "description": "Project identifier"
    },
    "prompt_category": {
      "type": "string",
      "description": "Category of the prompt/query"
    },
    "model_family": {
      "type": "string",
      "description": "AI model family (e.g., GPT-4, Claude)"
    },
    "destination": {
      "type": "string",
      "description": "Destination URL or endpoint"
    },
    "policy_id": {
      "type": "string",
      "description": "Policy identifier that triggered the decision"
    },
    "remediation_ticket": {
      "type": "string",
      "description": "Remediation ticket reference"
    }
  },
  "additionalProperties": true
}
